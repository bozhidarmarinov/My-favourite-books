<h1>Similar books to <%= @book.description %></h1>
<table id="similar_books">
  <thead>
  <tr>
    <th>Book Title</th>
    <th>Genre</th>
    <th>Publish Date</th>
    <th>Author</th>
    <th>More Info</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.genre %>
      </td>
      <td>
        <%= book.publish_date %>
      </td>
      <td>
        <%= book.author %>
      </td>
      <td>
        <%= link_to "More about #{book.title}", book_path(book) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
